<?xml version="1.0" encoding="utf-8"?>
<local:PageViewBase
    x:Class="Contoso.WinUI.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Contoso.WinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Contoso.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="CookbookListItemTemplate" x:DataType="vm:CookbookViewModel">
            <Grid Width="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind Title}" />
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="{x:Bind RecipeCountText, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ScrollView>
            <StackPanel Spacing="8" HorizontalAlignment="Center" Padding="0,48">
                <!-- Title -->
                <TextBlock
                    x:Uid="Home_TitleTextBlock" 
                    HorizontalAlignment="Center"
                    FontSize="48"
                    FontWeight="SemiBold"/>
                
                <!-- Action buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- App settings -->
                    <Button Command="{x:Bind ViewModel.NavigateToSettingsCommand}">
                        <TextBlock x:Uid="Home_SettingsButton_TextBlock" />
                    </Button>
                    
                    <!-- Create a new Cookbook -->
                    <!--<Button Command="{x:Bind ViewModel.NavigateToNewCookbookCommand}">
                        <TextBlock x:Uid="Home_NewCookbookButton_TextBlock" />
                    </Button>-->
                </StackPanel>

                <!-- Cookbooks -->
                <ListView
                    ItemsSource="{x:Bind ViewModel.Cookbooks, Mode=OneWay}"
                    ItemTemplate="{StaticResource CookbookListItemTemplate}"
                    SelectionMode="None"
                    IsItemClickEnabled="True"
                    ItemClick="CookbooksListView_ItemClick" />
            </StackPanel>
        </ScrollView>
    </Grid>
</local:PageViewBase>
